{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,

    "baseUrl": ".",
    "outDir": "out/assets/",
    "paths": {
      "/assets/*": [
        "src/code/*",
        "src/code/fetchers/*"
      ]
    }
  },
  "include": [
    "src/code/**/*.js",
    "src/code/**/*.ts",
    "src/code/**/*.tsx"
  ]
}
